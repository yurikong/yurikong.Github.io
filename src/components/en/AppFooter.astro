---
import AppLink from "~components/AppLink.astro"
import LocaleImageViewer from "~components/LocaleImageViewer.astro"
---

<!-- App Footer -->
<footer class:list={["text-center", "text-xs", "leading-relaxed", "px-6", "pt-24", "pb-12", "md:px-12", "md:pt-48"]}>
  <!-- Donations -->
  <div class:list={["flex", "items-center", "justify-center", "gap-8"]}>
    <!-- Wechat -->
    <div class:list={["flex-1", "max-w-25", "lg:max-w-35"]}>
      <LocaleImageViewer
        assets={[{ src: "/src/assets/images/wechat-donation-qr.webp", alt: "Scan QR code to donate on Wechat." }]}
        showIndex={false}
      />
      <div class:list={["mt-1", "dark:text-gray-400"]}>Wechat Donate</div>
    </div>

    <!-- Buy me a coffee -->
    <div class:list={["flex-1", "max-w-25", "lg:max-w-35"]}>
      <LocaleImageViewer
        assets={[
          { src: "/src/assets/images/buy-me-a-coffee-donation-qr.webp", alt: "Scan QR code to buy me a coffee." },
        ]}
        showIndex={false}
      />
      <div class:list={["mt-1", "dark:text-gray-400"]}>Buy me a coffee</div>
    </div>
  </div>

  <!-- Site info -->
  <p class:list={["mt-8", "lg:mt-12"]}>
    <!-- Author -->
    <div>
      <span>
        Made with<span class="text-red-500"> ❤️ </span>by
      </span>
      <span class="inline-flex">
        <AppLink
          class:list={["capitalize", "text-gray-800", "dark:text-gray-400"]}
          url="https://yurikong.github.io"
          showSuffixIcon
        >
          jianqiang du
        </AppLink>
        <span>.</span>
      </span>
    </div>

    <!-- License -->
    <div>
      <span>Released under</span>
      <span class="inline-flex">
        <AppLink
          class:list={["text-gray-800", "dark:text-gray-400"]}
          url="https://opensource.org/license/mit"
          showSuffixIcon
        >
          The MIT License
        </AppLink>
        <span>.</span>
      </span>
    </div>

    <!-- Credit -->
    <div>
      <span>Credits —</span>
      <span class="inline-flex">
        <AppLink
          class:list={["capitalize", "text-gray-800", "dark:text-gray-400"]}
          url="https://brittanychiang.com"
          showSuffixIcon
        >
          brittany chiang
        </AppLink>
        <span>.</span>
      </span>
    </div>

    <!-- Engine -->
    <div>
      <span>Site built with</span>
      <span class="inline-flex">
        <AppLink
          class:list={["capitalize", "text-gray-800", "dark:text-gray-400"]}
          url="https://astro.build"
          showSuffixIcon
        >
          {Astro.generator}
        </AppLink>
        <span>.</span>
      </span>
    </div>
  </p>
</footer>
