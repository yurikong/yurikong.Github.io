---
import { works } from "~data/en/works"
import { mostRecentYearComparator } from "~utils/comparators"
import type { IWork } from "~types/work"
import WorkDetails from "./WorkDetails.astro"
import AppLink from "~components/AppLink.astro"

interface Props {
  class?: string
}
const { class: className } = Astro.props
const workDetailsList: IWork[] = works.toSorted(mostRecentYearComparator)
---

<!-- Work -->
<section class={className}>
  <header
    class:list={[
      "sticky",
      "top-0",
      "z-20",
      "px-6",
      "py-5",
      "mb-4",
      "-mx-6",
      "md:px-12",
      "md:py-8",
      "md:-mx-12",
      "md:mb-8",
      "font-semibold",
      "text-sm",
      "tracking-widest",
      "uppercase",
      "text-gray-800",
      "dark:text-gray-300",
      "bg-gray-100",
      "dark:bg-gray-900",
    ]}
  >
    Work
  </header>

  <!-- Work List -->
  <ul>
    {
      workDetailsList.map((it) => (
        <li class:list={["mb-12", "last-of-type:mb-0"]}>
          <WorkDetails {...it} />
        </li>
      ))
    }
  </ul>

  <!-- View Full Resume -->
  <AppLink
    class:list={["block", "mt-24", "font-semibold", "capitalize", "text-gray-800", "dark:text-gray-300"]}
    showSuffixIcon
  >
    View Full Resume
  </AppLink>
</section>
